<h1> <%= @event.username %> </h1>
<ul>
    <li> <%= link_to "Back to Index", events_path %></li>
    Event Name: <%= @event.title %> <br> 
    Date of Event: <%= @event.date_of_event %> <br>
    Location: <%= @event.location %> <br>
    Description: <%= @event.description %> <br>
    Created by: <%link_to @event.user, user_path(@event.user) %> <br>
</ul>

<ul>
    <h2> Attending Users </h2>
    <% @attendances.each do |a| %>
        <% user = a.user %>
        <li><%= link_to user.username, user_path(user) %></li>
        Email: <%= user.email %><br>
        Member?: <%= user.member_status %><br>
    <% end %>
</ul>
